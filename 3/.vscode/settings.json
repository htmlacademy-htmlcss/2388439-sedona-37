{
  "editor.renderWhitespace": "selection",
  "files.exclude": {
      "*:Zone.Identifier": true,
      "node_modules/": true
  },
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "css.format.spaceAroundSelectorSeparator": true,
  "css.lint.compatibleVendorPrefixes": "warning",
  "css.lint.duplicateProperties": "warning",
  "css.lint.idSelector": "error",
  "css.lint.important": "error",
  "css.lint.importStatement": "warning",
  "css.lint.universalSelector": "warning",
  "css.lint.unknownVendorSpecificProperties": "warning",
  "css.lint.zeroUnits": "error",
  "html.format.endWithNewline": true,
  "html.format.indentInnerHtml": true
  {
    // Форматировать при сохранении
    "editor.formatOnSave": true,
    // Форматировать при вставке
    "editor.formatOnPaste": true,
    // Управляет тем, как следует переносить строки
    "editor.wordWrap": "bounded",
    // Работает с настройкой "editor.wordWrap": "bounded". Текст переносится взависимости от ширины окна
    "editor.wordWrapColumn": 500,
    // Включена ли поддержка связанного редактирования в редакторе
    "editor.linkedEditing": true,
    // Размер шрифта в редакторе
    "editor.fontSize": 14,
    // Активируем раскраску парных скобок. true по умолчанию
    "editor.bracketPairColorization.enabled": true,
    // Какой клавишей проставляются несколько курсоров
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    // Контролирует, должны ли появляться быстрые предложения при наборе текста
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    },
    // Добавляет пустую строчку в файлах
    "files.insertFinalNewline": true,
    // Должно ли запрашивать разрешение на перемещении файлов и папок
    "explorer.confirmDragAndDrop": false,
    // Чудо настройки отменяют перенос атрибутов при форматировщике
    "html.format.wrapLineLength": 0,
    "html.format.enable": true,
    // Удаляет пустые строки
    "html.format.maxPreserveNewLines": 1,
    // Убирает проверку doctype плагин HtmlHint, приходится дублировать остальные свойства, иначе он их почему то отключает
    "htmlhint.options": {
      // Doctype должен быть объявлен первым.
      "doctype-first": true,
      // Недопустимый тип документа.
      "doctype-html5": true,
      // атрибут HTML lang является обязательным.
      "html-lang-require": true,
      // <style>теги использовать нельзя.
      "style-disabled": true,
      // <title>должен присутствовать в <head>теге.
      "title-require": true,
      // Все имена атрибутов должны быть в нижнем регистре
      "attr-lowercase": true,
      // Элементы не могут иметь повторяющиеся атрибуты
      "attr-no-duplication": true,
      // Без пробелов между именами атрибутов и значениями.
      "attr-no-unnecessary-whitespace": true,
      // значения атрибутов не могут содержать небезопасные символы.
      "attr-unsafe-chars": true,
      // значения атрибутов должны быть заключены в двойные кавычки
      "attr-value-double-quotes": true,
      // Все атрибуты должны иметь значения.
      "attr-value-not-empty": false,
      // Атрибуты отсортированы по порядку: class, id, name, src, for, type, href, value, title, alt, role, aria..
      // "attr-sorted": false,
      // Нет начальных или конечных пробелов в значениях атрибутов.
      // Должен присутствовать атрибут alt элемента, а атрибут alt области [href] и input [type=image] должны иметь значение.
      "alt-require": true,
      // Все теги [input] должны иметь соответствующий тег [label]
      "input-requires-label": true,
      // Тег должен быть парным.
      "tag-pair": true,
      // Пустые теги должны быть самозакрытыми.
      "tag-self-close": false,
      // Все имена HTML-элементов должны быть в нижнем регистре.
      "tagname-lowercase": true,
      // Атрибут src в img(script,link) должен иметь значение.
      "src-not-empty": true,
      // Атрибут href должен быть либо абсолютным, либо относительным.
      // "href-abs-or-rel": true,
      // Атрибуты id и class не могут использовать ключевое слово объявления, оно будет заблокировано программным обеспечением для блокировки рекламы.
      "id-class-ad-disabled": true,
      // значение атрибутов id должно быть уникальным.
      "id-unique": true,
      // нельзя использовать встроенный скрипт.
      "inline-script-disabled": true,
      // встроенный стиль использовать нельзя.
      "inline-style-disabled": true,
      // не смешивайте табуляции и пробелы для отступов.
      "space-tab-mixed-disabled": "space",
      // Специальные символы должны быть экранированы.
      "spec-char-escape": true,
    },
    "html-css-class-completion.enableEmmetSupport": true,
    // Форматирование встроенными средствами
    "[html]": {
      "editor.defaultFormatter": "vscode.html-language-features"
    },
    // Форматирование встроенными средствами
    "[json]": {
      "editor.defaultFormatter": "vscode.json-language-features"
